
<%= form_tag("/tags/search", method: "get") do %>
    <%= text_field_tag(:search) %>
    <%= submit_tag("検索") %>
<% end %>
<table>
  <thead>
  <tr>
    <th>タグ名</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to '編集', edit_tag_path(tag) %></td>
        <td><%= link_to '削除', tag, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= render 'footer' %>