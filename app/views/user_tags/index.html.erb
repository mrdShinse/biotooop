<p id="notice"><%= notice %></p>

<h1>マイタグ一覧</h1>

<table>
  <thead>
    <tr>
      <th>タグ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_tags.each do |user_tag| %>
      <tr>
        <% tag = Tag.find(user_tag.tag_id) %>
        <td><%= tag.name %></td>
        <td>
            <%= form_tag({controller: 'user_tags', action: 'destroy', id: user_tag.id}, {method: 'delete'}) do %>
                <%= submit_tag('抜ける') %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

